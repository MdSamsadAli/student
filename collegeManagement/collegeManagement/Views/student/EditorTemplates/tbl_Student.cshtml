@model collegeManagement.Models.tbl_Student


<form>
	<div class="form-horizontal">
		<div class="row form-group">
			@Html.LabelFor(model => model.Name, htmlAttributes: new { @Class = "col-md-2" })
			<div class="col-md-4">
				@Html.EditorFor(a => a.Name, new { htmlAttributes = new { @Class = "form-control", @placeholder = "Enter Your Name..." } })
			</div>
		</div>

		<div class="form-group row">
			@Html.LabelFor(model => model.Address, htmlAttributes : new { @Class = "col-md-2" })
			<div class="col-md-4">
				@Html.EditorFor(a => a.Address, new { htmlAttributes = new { @Class = "form-control", @placeholder = "Enter Your Address..." } })
			</div>
		</div>

		<div class="form-group row">
			@Html.LabelFor(model => model.Contact, htmlAttributes: new { @Class = "col-md-2" })
			<div class="col-md-4">
				@Html.EditorFor(a => a.Contact, new { htmlAttributes = new { @Class = "form-control", @placeholder = "Enter Your Contact..." } })
			</div>
		</div>

		<div class="form-group row">
			@Html.LabelFor(model => model.Email, htmlAttributes: new { @Class = "col-md-2" })
			<div class="col-md-4">
				@Html.EditorFor(a => a.Email, new { htmlAttributes = new { @Class = "form-control", @placeholder = "Enter Your Email..." } })
			</div>
		</div>

		<br />
		<div class="col-md-2">
			<input type="submit" class="btn btn-info" value="Save" />
		</div>
	</div>
</form>
